{% extends 'blogbase.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <section id="singleArticle">
        <div class="article-container">
            <article id="blogArticle">
                <h1>{{ article.title }}</h1>
                <small>Publi√© le {{ article.createdAt | format_datetime(locale='fr',pattern="dd MMMM YYYY")}} par <a href="{{ path('app_user_usersprofile', {id: article.author.id}) }}">{{ article.author.username }}</a></small>
                <p>{{ article.content|raw }}</p>
            </article>
        </div>
        {{ include('comment/index.html.twig') }}
    </section>
{% endblock %}