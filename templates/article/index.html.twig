{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    {% for article in articles %}
        <h2><a href="{{ path('app_article_single', {id: article.id})}}">{{ article.title }}</a></h2>
        <p>{{ article.content|raw|length > 50 ? article.content|raw|slice(0, 50) ~ '...' : article.content|raw}}</p>
    {% endfor %}
{% endblock %}
