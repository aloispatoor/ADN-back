{% extends 'base.html.twig' %}

{% block title %}Articles de blog{% endblock %}

{% block body %}
    <section id="articlesList">
            <div class="container">
            {% for article in articles %}
                {% if article is empty %}
                    <p>Il n'y a pas (encore) d'articles publi√©s</p>
                {% else %}
                <h2><a href="{{ path('app_article_single', {id: article.id})}}">{{ article.title }}</a></h2>
                <p>{{ article.content|raw }}</p>
                {% endif %}
            {% endfor %}
            </div>
        {{ knp_pagination_render(articles, 'pagination.html.twig') }}
    </section>
{% endblock %}
