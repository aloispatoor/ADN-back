{% block comments %}
    {{ include('comment/create.html.twig') }}
    {% for comment in comments %}
        <div id="comments">
            <p><a href="{{ path('app_user_profile', {id: comment.author.id} )}}">{{ comment.author.username }}</a></p>
            <p>{{ comment.content }}</p>
            <p>{{ comment.createdAt|format_datetime(locale='fr',pattern="dd MMMM YYYY") }}</p>
        </div>
    {% endfor %}
{% endblock %}
