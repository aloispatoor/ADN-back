{% block comments %}
    {{ include('comment/create.html.twig') }}
    {% for comment in comments %}
        <div id="comments">
            <p>
                <a href="{{ path('app_user_usersprofile', {id: comment.author.id})}}">
                    {{ comment.author.username }}
                </a>
            </p>
            <p>{{ comment.content }}</p>
            <small>{{ comment.createdAt|format_datetime(locale='fr',pattern="dd MMMM YYYY") }}</small>
        </div>
    {% endfor %}
        {{ knp_pagination_render(comments, 'pagination.html.twig') }}
{% endblock %}
