{% if app.user %}
<div class="createComment">
    <h2>Ã‰crire un commentaire</h2>
    {% for message in app.flashes('successEditProfile') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('deleteComment') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('reportComment') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {{form_start(commentform)}}
    {{form_row(commentform.content, {
        'label' : 'Commentaire : ',
        'attr': {'class': 'form-control'}
    })}}
    <div class="button-container">
        <button type="submit" class="button">Envoyer votre commentaire</button>
    </div>
    {{form_end(commentform)}}
</div>
{% else %}
<div class="createComment">
    <p>Vous voulez commenter ? <a href="/login">Connectez-vous ici</a><p>
</div>
{% endif %}