{% extends 'adminbase.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
<main id="superAdmin">
    {{ include('super_admin/sidebar.html.twig')}}
    <section id="adminArticles">
        <h1>Votre espace Admin</h1>
        <h2>Utilisateur-rices</h2>
        <table class="table">
            <thead>
                <tr>
                    <td>Email</td>
                    <td>Pseudonyme</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.username }}</td>
                    <td>
                        <form action="{{ url('app_super_admin_user_delete', { id: user.id }) }}" method="post">
                            <input type="hidden" name="token" value="{{ csrf_token('delete-user') }}"/>
                            <button type="submit">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Pas d'utilisateur-rice trouv√©-e</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
</main>
{% endblock %}