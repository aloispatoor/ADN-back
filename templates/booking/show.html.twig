{% extends 'homebase.html.twig' %}

{% block title %}Évement{% endblock %}

{% block body %}
    <section class="booking">
        <h2>événement</h2>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ booking.id }}</td>
                </tr>
                <tr>
                    <th>Commence le</th>
                    <td>{{ booking.start ? booking.start|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Fini le</th>
                    <td>{{ booking.end ? booking.end|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ booking.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ booking.description }}</td>
                </tr>
            </tbody>
        </table>

        <div class="button-container">
            <a href="{{ path('app_booking_index') }}">Retour à la liste</a>

            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('app_booking_edit', {'id': booking.id}) }}">Modifier</a>

                {{ include('booking/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </section>
{% endblock %}
