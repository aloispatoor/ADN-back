{% extends 'blogbase.html.twig' %}

{% block title %}S'incrire{% endblock %}

{% block body %}
<section class="loginFormPage">
    <div class="container">
        <h1>Inscrivez-vous</h1>
        <div class="form">
            {{ form_start(registrationForm) }}
                <div class="formLines">
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.username, {
                        'label' : "Nom d'utilisateur"
                    }) }}
                </div>
                <div class="formLines">
                    {{ form_row(registrationForm.password, {
                        'label' : "Mot de passe"
                    }) }}
                </div>
                {{ form_row(registrationForm.agreeTerms, {
                    'label' : "Cochez si vous Ãªtes d'accord avec les conditions d'utilisation"})
                 }}

                <button type="submit" class="button">S'incrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>
{% endblock %}